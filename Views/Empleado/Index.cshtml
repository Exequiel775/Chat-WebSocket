@{
    ViewData["Title"] = "Listado de empleados";
}

<div class="alert alert-success" role="alert" id="notificacion" style="display: none;">
</div>

<div class="row">
    <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
        <div class="form-group">
            <label>Legajo</label>
            <input type="number" class="form-control" id="Legajo">
        </div>
        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" id="Nombre">
        </div>
        <div class="form-group">
            <label>Apellido</label>
            <input type="text" class="form-control" id="Apellido">
        </div>
        <div class="form-group">
            <label>DNI</label>
            <input type="text" class="form-control" id="Dni">
        </div>
        <div class="mt-2">
            <button type="button" class="btn btn-success agregarEmpleado">AGREGAR</button>
        </div>
    </div>
    <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
        <div class="table-responsive">
            <table class="table table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Legajo</th>
                        <th>Apellido y Nombre</th>
                        <th>DNI</th>
                        <th>Acci√≥n</th>
                    </tr>
                </thead>
                <tbody class="tabla-empleados">

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalModificarEmpleado" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="apyNom"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="form-group">
              <label for="nuevoNombre">Nombre</label>
              <input type="text" class="form-control" id="nuevoNombre">
          </div>
          <div class="form-group">
              <label for="Apellido">Apellido</label>
              <input type="text" class="form-control" id="nuevoApellido">
          </div>
          <div class="form-group">
              <label for="nuevoApellido">Dni</label>
              <input type="text" class="form-control" id="nuevoDni">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary btnModificarEmpleado">Modificar</button>
      </div>
    </div>
  </div>
</div>

<button type="button" class="btn btn-danger informar">Informar Todos</button>
<br>
<button type="button" class="btn btn-primary agregar">Agregar Empleado</button>

<script src="~/IndexEmpleado/main.js"></script>